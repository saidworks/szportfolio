@page "/admin/media"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@inject IMediaService MediaService

<PageTitle>Media Management - Admin</PageTitle>

<div class="admin-media">
    <h1 class="mb-4">Media Management</h1>

    <!-- Upload Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Upload Media</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select id="category" class="form-select" @bind="uploadCategory">
                            <option value="articles">Articles</option>
                            <option value="projects">Projects</option>
                            <option value="general">General</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="fileUpload" class="form-label">Select File</label>
                <InputFile id="fileUpload" class="form-control" OnChange="@HandleFileSelected" accept="image/*" />
                <small class="text-muted">Maximum file size: 5 MB. Supported formats: JPG, PNG, GIF</small>
            </div>

            @if (!string.IsNullOrEmpty(uploadMessage))
            {
                <div class="alert @(uploadSuccess ? "alert-success" : "alert-danger")">
                    @uploadMessage
                </div>
            }

            <button class="btn btn-primary" @onclick="UploadFile" disabled="@(selectedFile == null || isUploading)">
                @if (isUploading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                <i class="bi bi-upload"></i> Upload
            </button>
        </div>
    </div>

    <!-- Media Library -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Media Library</h5>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (mediaFiles != null && mediaFiles.Any())
            {
                <div class="row g-3">
                    @foreach (var file in mediaFiles)
                    {
                        <div class="col-md-3">
                            <div class="card">
                                <img src="@file.BlobUrl" class="card-img-top" alt="@file.OriginalFileName" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@file.OriginalFileName">
                                        @file.OriginalFileName
                                    </h6>
                                    <p class="card-text small text-muted">
                                        <span class="badge bg-secondary">@file.Category</span>
                                        <br />
                                        @FormatFileSize(file.FileSize)
                                        <br />
                                        @file.UploadedDate.ToString("MMM dd, yyyy")
                                    </p>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => CopyUrl(file.BlobUrl)">
                                            <i class="bi bi-clipboard"></i> Copy URL
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteFile(file.FileName)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No media files uploaded yet.</p>
            }
        </div>
    </div>
</div>

@code {
    private List<MediaFileDto>? mediaFiles;
    private IBrowserFile? selectedFile;
    private string uploadCategory = "articles";
    private bool isLoading = true;
    private bool isUploading = false;
    private string uploadMessage = string.Empty;
    private bool uploadSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadMediaFiles();
    }

    private async Task LoadMediaFiles()
    {
        isLoading = true;
        try
        {
            mediaFiles = await MediaService.GetMediaFilesAsync();
        }
        catch (Exception)
        {
            mediaFiles = new List<MediaFileDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        uploadMessage = string.Empty;
    }

    private async Task UploadFile()
    {
        if (selectedFile == null) return;

        isUploading = true;
        uploadMessage = string.Empty;

        try
        {
            var url = await MediaService.UploadImageAsync(selectedFile, uploadCategory);
            
            if (!string.IsNullOrEmpty(url))
            {
                uploadSuccess = true;
                uploadMessage = "File uploaded successfully!";
                selectedFile = null;
                await LoadMediaFiles();
            }
            else
            {
                uploadSuccess = false;
                uploadMessage = "Failed to upload file. Please try again.";
            }
        }
        catch (Exception)
        {
            uploadSuccess = false;
            uploadMessage = "An error occurred while uploading the file.";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task DeleteFile(string fileName)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this file?"))
        {
            var success = await MediaService.DeleteMediaFileAsync(fileName);
            if (success)
            {
                await LoadMediaFiles();
            }
        }
    }

    private async Task CopyUrl(string url)
    {
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", url);
        // Could show a toast notification here
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
